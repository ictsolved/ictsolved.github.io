---
sitemap: false
robots: noindex
---

[{% for post in site.posts %}
       {
        "title": "{{ post.title | xml_escape }}",
        "description": {{ post.content | strip_html | truncate: 160 | jsonify }},
        "date":"{{post.date | xml_escape | date_to_xmlschema }}",
        "image": "{{ post.img | prepend: site.blog_img_path | prepend: site.url | xml_escape }}",
        "url": "{{ post.url | prepend: site.url | xml_escape }}"
      }
      {% unless forloop.last %},{% endunless %}
    {% endfor %}]